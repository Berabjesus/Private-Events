<div class="border bg-light mt-3 py-3 col-sm-5 mx-auto">
  <h1 class="my-4">Login</h1>
  <%= form_tag '/login', class: 'form-horizontal' do %>
  <div class="form-group">
    <%= label_tag :Username, "User Name"%>
    <%= text_field_tag :username,"", class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= label_tag :password%>
    <%= password_field_tag :password,"", class: 'form-control'%>
  </div>
    <%= submit_tag "Login", class: 'btn btn-info'%>
  <%end%>

  <div class="mt-4 d-flex">
    <p class="mb-2">Not Signed up?</p>
    <%= link_to 'Sign Up', new_user_path, class: 'btn-link ml-2'%>
  </div>
</div>